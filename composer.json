{
    "name": "b7s/whisper-php",
    "description": "Transform audio into text with Whisper.cpp AI - directly in PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Bruno",
            "email": "me@brunots.dev"
        }
    ],
    "require": {
        "php": "^8.2",
        "symfony/process": "^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "WhisperPHP\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "WhisperPHP\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/whisper-setup",
        "bin/whisper-status"
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest",
        "analyse": "phpstan analyse",
        "whisper:setup": "php bin/whisper-setup",
        "whisper:status": "php bin/whisper-status",
        "post-install-cmd": [
            "@whisper:info"
        ],
        "post-update-cmd": [
            "@whisper:info"
        ],
        "whisper:info": [
            "echo ''",
            "echo 'â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—'",
            "echo 'â•‘              whisper-php Installed Successfully              â•‘'",
            "echo 'â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•'",
            "echo ''",
            "echo 'ğŸ“¦ Next step: Run setup to download Whisper binaries and models'",
            "echo ''",
            "echo '   vendor/bin/whisper-setup'",
            "echo ''",
            "echo 'ğŸ’¡ Or with custom options:'",
            "echo '   vendor/bin/whisper-setup --model=small.en'",
            "echo ''",
            "echo 'ğŸ“Š Check installation status:'",
            "echo '   vendor/bin/whisper-status'",
            "echo ''",
            "echo 'ğŸ“– Documentation: https://github.com/b7s/whisper-php'",
            "echo ''"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
